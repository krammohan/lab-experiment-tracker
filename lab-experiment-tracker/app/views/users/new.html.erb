<h1>Sign Up</h1>
<%= form_for :user, url: '/users' do |f| %>
  First Name: <%= f.text_field :first_name %>
  Last Name: <%= f.text_field :last_name %>
  Are you a scientist? <%= f.check_box :isScientist %>
  Email: <%= f.email_field :email %>
  Password: <%= f.password_field :password %>
  <%= f.submit "Submit" %>
<% end %>
